<!doctype html>
<html>
  <head>
    <title><%= shopName %></title>
    <style>
      body {
        background-color: #f0fff4;
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 40px;
      }
      h1 {
        color: #2e7d32;
      }
      form {
        background-color: #ffffff;
        display: inline-block;
        padding: 30px 50px;
        border-radius: 15px;
        border: 2px solid #81c784;
        text-align: left;
      }
      label {
        display: block;
        margin: 10px 0 5px;
      }
      input[type="text"] {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-bottom: 15px;
      }
      input[type="submit"] {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        cursor: pointer;
      }
      input[type="submit"]:hover {
        background-color: #2e7d32;
      }
    </style>
  </head>
  <body>
    <h1>Find your favourite drink</h1>
    <form action="/search_result" method="GET">
      <label for="search_box">Name:</label>
      <input id="search_box" type="text" name="search_text">

      <label for="category_box">Category:</label>
      <input id="category_box" type="text" name="category">

      <input type="submit" value="Search">
    </form>
  </body>
</html>
